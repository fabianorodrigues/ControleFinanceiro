<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <ul class="navbar-nav">
            <li class="nav-item active">
                @Html.ActionLink("Orçamento", "Index", "Orcamento", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.RouteLink("Gastos e Rendas", "ListarLancamentos", new { }, new { @class = "nav-link" })
            </li>
        </ul>
    </nav>
    <br />

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="text-center"  >
        <p>&copy; @DateTime.Now.Year - <a href="https://www.linkedin.com/in/oliveirarodriguesfabiano/">Fabiano Rodrigues</a></p>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
