@model ControleFinanceiro.ViewModels.MetaViewModel
@{
    ViewBag.Title = "Alterar Meta";
}


<h2>Alterar Meta</h2>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Alterar", "Meta", FormMethod.Post))
        {
            <div class="modal-header">
                <h4 class="modal-title">Alterar Meta</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            @Html.Partial("Partial/_Form", Model)

            <div class="modal-footer">
                <div>
                    <input type="submit" value="Alterar" class="btn btn-primary" />
                    <input type="button" value="Cancelar" class="btn btn-danger" data-dismiss="modal" />
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Voltar", "Index")
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}